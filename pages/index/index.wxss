/**index.wxss**/
@import"/pages/common/common.wxss";

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.item{
  height: 100%;
  line-height: 150px;
  text-align: center;
}
.table {
  display: flex;
  flex-direction: column;
  margin: 20px;
  border: 1px solid #ccc;
  border-radius: 10px;
  overflow: hidden;
}

.tr {
  display: flex;
  flex-direction: row;
}

.th, .td {
  flex: 1;
  padding: 10px;
  text-align: center;
  border-bottom: 1px solid #ccc;
}

.th {
  background-color: #f5f5f5;
  font-weight: bold;
}

.td {
  background-color: #fff;
}

.tr:nth-child(even) .td {
  background-color: #f9f9f9;
}






