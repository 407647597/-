.main-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(to bottom, #E0F7FA, #B2EBF2);
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.container {
  width: 100%;
  height: 200px;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  top: 380rpx;
  left: 40rpx;
  font-size: 20rpx;
  font-weight: bold;
  z-index: 1000;
}

.fui-section__title {
  margin-left: 32rpx;
}

.fui-card__content {
  font-size: 28rpx;
  padding: 32rpx 20rpx;
  box-sizing: border-box;
}

.fui-padding {
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.fui-list__item {
  width: 100%;
  height: 385rpx;
  position: relative;
  background: #eee;
}

.fui-cover {
  width: 100%;
  height: 100%;
  display: block;
}

.fui-list__title {
  position: absolute;
  left: 15%;
  bottom: 8%;
  color: rgb(241, 240, 240);
  font-weight: 500;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
}

.fui-card__title {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  font-weight: 500;
}

.contener2 {
  width: 50%;
}

.container3 {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
  background: white;
}

.movable-view {
  z-index: 1001;  /* 确保movable-view在最上层 */
}

.movable-area {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;  /* 确保movable-area不被其他元素遮挡 */
}

.fui-card__wrap {


  position: relative;
  z-index: 2;  /* 提升层级，确保能接收点击事件 */
}
