.container {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: transparent; /* 确保背景透明 */
}
.title {
  font-size: 24px; /* 放大字体 */
  font-weight: bold;
  text-align: center; /* 居中对齐 */
  margin-bottom: 20px; /* 添加下边距 */
}
.login-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.login-box {
  position: relative;
  width: 300px;
  padding: 20px;
  background-color: rgba(255, 255, 255); /* 半透明背景 */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 20px; /* 圆角 */
  z-index: 1;
}
.input {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
  height: 40px;
  font-size: 16px;
}
.login-btn, .btn {
  width: 100%;
  padding: 10px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
