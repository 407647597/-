.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

button {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #1aad19;
  color: #fff;
  border-radius: 10rpx;
  width: 80%;
  text-align: center;
}

.profile, .contact {
  width: 100%;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.profile-item, .contact-item {
  margin-bottom: 20rpx;
}
.login_root{
  display: flex;
  padding: 50rpx;
  align-items: center;
  background: #4387df;
}

.avatar{
  border-radius: 50%;
  width: 180rpx;
  height:180rpx;
  margin-right:30rpx;
  background:rgb(88, 87, 87);
}
/* index.wxss */
.container {
  padding: 20px;
}
.my_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border: 1px solid #ccc;
  cursor: pointer;
}
.student_info {
  margin-top: 10px;
}
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
}

